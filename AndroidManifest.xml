            android:label="@string/stock_title" >
       </activity>
       <activity
            android:name=".QRGeneratorActivity"
            android:label="@string/stock_title" >
       </activity>
       <activity
            android:name=".CashOpenActivity"
            android:label="@string/stock_title" >
